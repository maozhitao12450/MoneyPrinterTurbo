    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/app", // 设置工作目录为你项目的app目录
            "env": {
                "PYTHONPATH": "${workspaceFolder}" // 确保PYTHONPATH包含了你的项目根目录
            }
        }
    ]
}